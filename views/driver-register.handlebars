<div class="container">
    <h1 class="text-center" style="color:white">Driver Registration</h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post">
                <div>
                    <label for="licenseno" style="color:white">Driver license No</label>
                    <input type="number" name="licenseno" id="licenseno" class="form-control">
                </div>
                <div>
                    <label for="drivername" style="color:white">Driver Name</label>
                    <input type="text" name="drivername" id="drivername" class="form-control">
                </div>
                <div>
                    <label for="driveremail" style="color:white">Driver Email</label>
                    <input type="email" name="driveremail" id="driveremail" class="form-control">
                </div>
                <div>
                    <label for="driverpassword" style="color:white">Driver Password</label>
                    <input type="password" name="driverpassword" id="driverpassword" class="form-control">
                </div>
                <div>
                    <label for="drivermobile" style="color:white">Driver Mobile</label>
                    <input type="number" name="drivermobile" id="drivermobile" class="form-control">
                </div>
                <div>
                    <label for="driveraddress" style="color:white">Driver Address</label>
                    <input type="text" name="driveraddress" id="driveraddress" class="form-control">
                </div>
                <div>
                    <label for="driverdob" style="color:white">Driver Dob</label>
                    <input type="date" name="driverdob" id="driverdob" class="form-control">
                </div>
                <div>
                    <label for="drivergender" style="color:white">Driver Gender</label>
                    <input type="radio" name="drivergender" id="drivermale" value="F">Male
                    <input type="radio" name="drivergender" id="driverfemale" value="M">Female
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Register</button>
                    {{#if message}}
                    <p class="text-danger">{{message}}</p>
                    {{/if}}
                </div>

            </form>
        </div>
    </div>
</div>