<div class="container" style="color: white;">
    <h1 class="text-center"> Update Cab Details</h1>
    <div class="row">
        <div class="col-sm-6 offset sm-3">
            <form method="post">
                <div>
                    <label for="cabNo">Cab No</label>
                    <input type="number" name="cabNo" id="cabNo" class="form-control" value="{{data.dataValues.cab_no}}">
                </div>
                <div>
                    <label for="cabName">Cab Name</label>
                    <input type="text" name="cabName" id="cabName" class="form-control" value="{{data.dataValues.cab_name}}">
                </div>
                <div>
                    <label for="cabDescription">Cab Desctription</label>
                    <textarea name="cabDescription" id="cabDescription" cols="30" rows="10" class="form-control">{{data.dataValues.cab_description}}</textarea>
                </div>
                <div>
                    <label for="totalCapacity">Total Capacity</label>
                    <input type="number" name="totalCapacity" id="totalCapacity" class="form-control" value="{{data.dataValues.total_capacity}}">
                </div>
                <div>
                    <label for="driverId">Driver Id</label>
                    <input type="number" name="driverId" id="driverId" class="form-control" value="{{data.dataValues.driver_id}}">
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>