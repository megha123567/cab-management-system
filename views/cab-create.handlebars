<div class="container">
    <h1 class="text-center" style="color:white">Cab Details</h1>
    <div class="row">
        <div class="col-sm-6 offset sm-3">
            <form method="post">
                <div>
                    <label for="cabNo" style="color:white">Cab No</label>
                    <input type="number" name="cabNo" id="cabNo" class="form-control">
                </div>
                <div>
                    <label for="cabName" style="color:white" >Cab Name</label>
                    <input type="text" name="cabName" id="cabName" class="form-control">
                </div>
                <div>
                    <label for="cabDescription" style="color:white">Cab Desctription</label>
                    <textarea name="cabDescription" id="cabDescription" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div>
                    <label for="totalCapacity" style="color:white">Total Capacity</label>
                    <input type="number" name="totalCapacity" id="totalCapacity" class="form-control">
                </div>
                <div>
                    <label for="driverId" style="color:white">Driver Id</label>
                    <input type="number" name="driverId" id="driverId" class="form-control">
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>