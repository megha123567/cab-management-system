<div class="container" >
    <h1 class="text-center" >Cab Details</h1>
    <div class="row">
        <div class="col-sm-6 offset sm-3">
            <form method="post">
                <div>
                    <label for="cabNo" >Cab No</label>
                    <input type="number" name="cabNo" id="cabNo" class="form-control">
                </div>
                <div>
                    <label for="cabName">Cab Name</label>
                    <input type="text" name="cabName" id="cabName" class="form-control">
                </div>
                <div>
                    <label for="cabDescription">Cab Desctription</label>
                    <textarea name="cabDescription" id="cabDescription" cols="10" rows="5" class="form-control"></textarea>
                </div>
                <div>
                    <label for="totalCapacity">Total Capacity</label>
                    <input type="number" name="totalCapacity" id="totalCapacity" class="form-control">
                </div>
                 {{!-- <div>
                    <label for="cost">Cost</label>
                    <input type="number" name="cost" id="cost" class="form-control">
                </div> --}}
                <div>
                    <label for="drivername" >Driver</label>
                    <select name="drivername" id="drivername" class="form-control">
                        {{#each driverName}}
                        <option value={{this.dataValues.driver_name}}:{{this.dataValues.driver_id}} > {{this.dataValues.driver_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-outline-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>