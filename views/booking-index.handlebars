<h1 class="text-center">Booking Details</h1>
<div class="container">
    <div class="col-sm-6 offset-sm-0">
        <form method="post">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" class="form-control">
            <button type="submit" class="btn btn-outline-info">Search</button>
        </form>

    </div>
    <div>
        {{#if found}}
        <div class="alert alert-info" role="alert">No Booking Found
</div>
{{/if}}
    </div>
    <pre>
    </pre>
    <div>
        <table class="table table-striped">
            <tr>
                <th>Booking Id</th>
                <th>Date of booking</th>
                <th>Cab From</th>
                <th>Cab To</th>
                <th>Booking Time</th>
                <th>Cab No</th>
                <th>Cost</th>
                <th>Passenger Id</th>
                <th>Driver Id</th>
                {{!-- <th>Edit/Delete</th> --}}
            </tr>
            {{#each data}}

            <tr>
                <td>{{this.dataValues.booking_id}}</td>
                <td>{{this.dataValues.date_of_booking}}</td>
                <td>{{this.dataValues.cab_from}}</td>
                <td>{{this.dataValues.cab_to}}</td>
                <td>{{this.dataValues.booking_time}}</td>
                <td>{{this.dataValues.cab_no}}</td>
                <td>{{this.dataValues.cost}}</td>
                <td>{{this.dataValues.passenger_id}}</td>
                <td>{{this.dataValues.driver_id}}</td>
                {{!-- <td>
                    <a href="/booking/update/{{this.dataValues.booking_id}}">Edit</a>|
                    <a href="/booking/delete/{{this.dataValues.booking_id}}" class="text-danger"
                        onclick="return confirm('Are you sure you want to delete this')">Delete</a>
                </td> --}}

            </tr>
            {{/each}}
        </table>

        <div>
            <button class="btn btn-outline-info"><a href="/booking">View all booking</a></button>
        </div>
    </div>

</div>