<div class="container" >
    <h1 class="text-center">Update Driver Details</h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post">
                <div>
                    <label for="licenseno">Driver license No</label>
                    <input type="number" name="licenseno" id="licenseno" class="form-control" value="{{data.dataValues.driver_license_no}}">
                </div>
                <div>
                    <label for="drivername">Driver Name</label>
                    <input type="text" name="drivername" id="drivername" class="form-control" value="{{data.dataValues.driver_name}}">
                </div>
                <div>
                    <label for="email">Driver Email</label>
                    <input type="email" name="email" id="email" class="form-control" value="{{data.dataValues.email}}">
                </div>
                <div>
                    <label for="password">Driver Password</label>
                    <input type="text" name="password" id="password" class="form-control" value="{{data.dataValues.password}}">
                </div>
                <div>
                    <label for="drivermobile">Driver Mobile</label>
                    <input type="number" name="drivermobile" id="drivermobile" class="form-control" value="{{data.dataValues.driver_mobile}}">
                </div>
                <div>
                    <label for="driveraddress">Driver Address</label>
                    <input type="text" name="driveraddress" id="driveraddress" class="form-control" value="{{data.dataValues.driver_address}}">
                </div>
                <div>
                    <label for="driverdob">Driver Dob</label>
                    <input type="text" name="driverdob" id="driverdob" class="form-control" value="{{data.dataValues.driver_dob}}">
                </div>
                <div>
                    <label for="drivergender">Driver Gender</label>
                    <input type="text" name="drivergender" id="drivergender"  class=" form-control" value="{{data.dataValues.driver_gender}}"> 
                    {{!-- <input type="text" name="drivergender" id="driverfemale" value="{{data.dataValues.driver_gender}}">Female --}}
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary shadow">Save</button>
                </div>
                
            </form>
        </div>
    </div>
</div>