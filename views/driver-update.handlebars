<div class="container" style="color: white;">
    <h1 class="text-center">Update Driver Details</h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post">
                <div>
                    <label for="licenseno">Driver license No</label>
                    <input type="number" name="licenseno" id="licenseno" class="form-control" value="{{data.dataValues.driver_license_no}}">
                </div>
                <div>
                    <label for="drivername">Driver Name</label>
                    <input type="text" name="drivername" id="drivername" class="form-control" value="{{data.dataValues.driver_name}}">
                </div>
                <div>
                    <label for="driveremail">Driver Email</label>
                    <input type="email" name="driveremail" id="driveremail" class="form-control" value="{{data.dataValues.driver_email}}">
                </div>
                <div>
                    <label for="driverpassword">Driver Password</label>
                    <input type="password" name="driverpassword" id="driverpassword" class="form-control" value="{{data.dataValues.driver_password}}">
                </div>
                <div>
                    <label for="drivermobile">Driver Mobile</label>
                    <input type="number" name="drivermobile" id="drivermobile" class="form-control" value="{{data.dataValues.driver_mobile}}">
                </div>
                <div>
                    <label for="driveraddress">Driver Address</label>
                    <input type="text" name="driveraddress" id="driveraddress" class="form-control" value="{{data.dataValues.driver_address}}">
                </div>
                <div>
                    <label for="driverdob">Driver Dob</label>
                    <input type="date" name="driverdob" id="driverdob" class="form-control" value="{{data.dataValues.driver_dob}}">
                </div>
                <div>
                    <label for="drivergender">Driver Gender</label>
                    <input type="radio" name="drivergender" id="drivermale" value="{{data.dataValues.driver_gender}}">Male 
                    <input type="radio" name="drivergender" id="driverfemale" value="{{data.dataValues.driver_gender}}">Female
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Register</button>
                </div>
                
            </form>
        </div>
    </div>
</div>